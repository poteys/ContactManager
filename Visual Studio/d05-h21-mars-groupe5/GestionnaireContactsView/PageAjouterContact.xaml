        <DataGrid x:Name="informationBase" HorizontalAlignment="Left" Height="207" Margin="273,84,0,0" VerticalAlignment="Top" Width="509"/>
        <Button x:Name="btnRetour" Content="Retour au menu principal" HorizontalAlignment="Left" Height="29" Margin="273,355,0,0" VerticalAlignment="Top" Width="228" Click="BtnRetour" FontFamily="Courier New" FontSize="14" Background="#FFFFFCD8" FontWeight="Bold" BorderBrush="Black" BorderThickness="2"/>
