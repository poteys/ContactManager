<Page x:Class="GestionnaireContactsView.PageSupprimerContact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionnaireContactsView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSupprimerContact">

    <Grid>
        <Label Content="Saisir l'ID du contact à supprimer :" HorizontalAlignment="Left" Height="34" Margin="29,61,0,0" VerticalAlignment="Top" Width="400" FontFamily="Courier New" FontSize="18" FontWeight="Bold"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="148,156,0,0" VerticalAlignment="Top" FontFamily="Courier New" FontSize="14" FontWeight="Bold"/>
        <TextBox  x:Name="txtId" HorizontalAlignment="Left" Height="23" Margin="180,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128"/>
        <Button x:Name="btnSupprimer" Content="Supprimer contact" HorizontalAlignment="Left" Margin="158,220,0,0" VerticalAlignment="Top" Width="168" Click="BtnSupprimer_Click" FontFamily="Courier New" FontSize="14" Background="#FFFF965B" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Height="27"/>
        <Button x:Name="btnRetour" Content="Retour au menu principal" HorizontalAlignment="Left" Height="29" Margin="127,289,0,0" VerticalAlignment="Top" Width="228" Click="BtnRetour" FontFamily="Courier New" FontSize="14" Background="#FFFFFCD8" FontWeight="Bold" BorderBrush="Black" BorderThickness="2"/>
        <DataGrid x:Name="datagridContacts" HorizontalAlignment="Left" Height="314" Margin="382,100,0,0" VerticalAlignment="Top" Width="408"/>
    </Grid>
</Page>
