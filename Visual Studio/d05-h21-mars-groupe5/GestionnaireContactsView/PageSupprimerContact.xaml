<Page x:Class="GestionnaireContactsView.PageSupprimerContact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionnaireContactsView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSupprimerContact">

    <Grid>
        <Label Content="Saisir l'ID du contact à supprimer :" HorizontalAlignment="Left" Height="34" Margin="34,37,0,0" VerticalAlignment="Top" Width="400" FontFamily="Courier New" FontSize="18" FontWeight="Bold"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="72,160,0,0" VerticalAlignment="Top" FontFamily="Courier New" FontSize="14" FontWeight="Bold"/>
        <TextBox  x:Name="txtId" HorizontalAlignment="Left" Height="23" Margin="104,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="128"/>
        <Button x:Name="btnSupprimer" Content="Supprimer contact" HorizontalAlignment="Left" Margin="82,224,0,0" VerticalAlignment="Top" Width="168" Click="BtnSupprimer_Click" FontFamily="Courier New" FontSize="14" Background="#FFFF965B" FontWeight="Bold" BorderBrush="Black" BorderThickness="2" Height="27"/>
        <DataGrid x:Name="datagridContacts" HorizontalAlignment="Left" Height="330" Margin="277,88,0,0" VerticalAlignment="Top" Width="439"/>
    </Grid>
</Page>
